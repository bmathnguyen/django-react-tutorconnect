# .env.example for TutorConnect Django Backend
# Copy this file to .env and fill in production secrets

# Django secret key
SECRET_KEY=your-secret-key-here

# Debug mode (True/False)
DEBUG=True

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database settings
DB_NAME=tutoring_db
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432

# Use Postgres (set to 1 for Postgres, blank for SQLite in dev)
USE_POSTGRES=1

# Redis settings
REDIS_URL=redis://localhost:6379/1
USE_REDIS=1

# Any other environment-specific settings can be added below
